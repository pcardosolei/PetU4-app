<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pet4u.pet4u.activities.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">



    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/animal_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/iv_foto_perfil"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:contentDescription="@string/foto_perfil_desc"
            app:srcCompat="@drawable/ic_face_black_48dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:text="Nome:"/>

            <TextView
                android:id="@+id/tv_display_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_nome"
                android:padding="5dp"
                android:text="José Sousa"/>

            <TextView
                android:id="@+id/tv_nasceu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_below="@id/tv_nome"
                android:text="Nasceu em:"/>

            <TextView
                android:id="@+id/tv_display_nascimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nome"
                android:layout_toEndOf="@id/tv_nasceu"
                android:padding="5dp"
                android:text="20/10/2010"/>

            <TextView
                android:id="@+id/tv_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_below="@id/tv_nasceu"
                android:text="Genero:"/>

            <TextView
                android:id="@+id/tv_display_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nasceu"
                android:layout_toEndOf="@id/tv_genero"
                android:padding="5dp"
                android:text="Masculino"/>

            <TextView
                android:id="@+id/tv_morada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_below="@id/tv_genero"
                android:text="Morada:"/>

            <TextView
                android:id="@+id/tv_telemovel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_below="@id/tv_morada"
                android:text="Telemóvel:"/>

            <TextView
                android:id="@+id/tv_display_telemovel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_morada"
                android:layout_toEndOf="@id/tv_telemovel"
                android:padding="5dp"
                android:text="987654321"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_below="@id/tv_telemovel"
                android:text="Email:"/>

            <TextView
                android:id="@+id/tv_display_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_telemovel"
                android:layout_toEndOf="@id/tv_email"
                android:padding="5dp"
                android:text="exemplo@empresa.com"/>

            <TextView
                android:id="@+id/tv_display_morada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Rua das Flores, nº5"
                android:layout_alignBaseline="@+id/tv_morada"
                android:layout_alignBottom="@+id/tv_morada"
                android:layout_toEndOf="@+id/tv_morada"
                android:maxLines="1"/>
        </RelativeLayout>
    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/tv_eventos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/animal_header"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Animais Registados:"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/tv_eventos"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_animais"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_below="@id/line"/>



</RelativeLayout>
