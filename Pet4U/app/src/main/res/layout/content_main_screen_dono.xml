<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_screen_dono"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pet4u.pet4u.activities.MainScreenDono"
    tools:showIn="@layout/app_bar_main_screen_dono"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_weight="0.4"
        android:id="@+id/ll_upper">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:id="@+id/rl_imgName"
            android:onClick="goToUserProfile">

            <ImageView
                app:srcCompat="@drawable/ic_face_black_48dp"
                android:id="@+id/im_fotoPerfil"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_fotoPerfil"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:text="Nome:"/>

            <TextView
                android:id="@+id/tv_display_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nome"
                android:padding="5dp"
                android:text="@string/loading"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:id="@+id/rl_animals">

            <TextView
                android:id="@+id/tv_animais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/animal_header"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Animais Registados:"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/tv_animais"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_animais"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_below="@id/line"/>



        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:id="@+id/rl_lower">

        <TextView
            android:id="@+id/tv_eventos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animal_header"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Ãšltimos Eventos:"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/tv_eventos"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_eventos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_below="@id/line2"/>

    </RelativeLayout>

</LinearLayout>
